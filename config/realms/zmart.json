{
  "realm": "zmart",
  "displayName": "ZMART",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": true,
  "registrationEmailAsUsername": false,
  "rememberMe": true,
  "verifyEmail": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 30,
  "defaultRoles": [
    "offline_access",
    "uma_authorization",
    "customer"
  ],
  "requiredCredentials": [
    "password"
  ],
  "loginTheme": "zmart",
  "accountTheme": "zmart", 
  "adminTheme": "zmart",
  "emailTheme": "zmart",
  "attributes": {
    "frontendUrl": "http://localhost:8080",
    "userProfileEnabled": "true",
    "adminEventsEnabled": "true",
    "adminEventsDetailsEnabled": "true"
  },
  "identityProviders": [
    {
      "alias": "github",
      "displayName": "GitHub",
      "providerId": "github",
      "enabled": true,
      "updateProfileFirstLoginMode": "on",
      "trustEmail": true,
      "storeToken": true,
      "addReadTokenRoleOnCreate": false,
      "authenticateByDefault": false,
      "linkOnly": false,
      "firstBrokerLoginFlowAlias": "Social Registration Flow",
      "config": {
        "clientId": "will-be-updated-via-api",
        "clientSecret": "will-be-updated-via-api",
        "useJwksUrl": "true"
      }
    },
    {
      "alias": "google",
      "displayName": "Google",
      "providerId": "google",
      "enabled": true,
      "updateProfileFirstLoginMode": "on",
      "trustEmail": true,
      "storeToken": true,
      "addReadTokenRoleOnCreate": false,
      "authenticateByDefault": false,
      "linkOnly": false,
      "firstBrokerLoginFlowAlias": "Social Registration Flow",
      "config": {
        "clientId": "will-be-updated-via-api",
        "clientSecret": "will-be-updated-via-api",
        "useJwksUrl": "true"
      }
    }
  ],
  "identityProviderMappers": [
    {
      "name": "github-username-mapper",
      "identityProviderAlias": "github",
      "identityProviderMapper": "github-user-attribute-mapper",
      "config": {
        "jsonField": "login",
        "userAttribute": "githubUsername",
        "syncMode": "INHERIT"
      }
    },
    {
      "name": "github-email-mapper",
      "identityProviderAlias": "github",
      "identityProviderMapper": "github-user-attribute-mapper",
      "config": {
        "jsonField": "email",
        "userAttribute": "email",
        "syncMode": "INHERIT"
      }
    },
    {
      "name": "google-id-mapper",
      "identityProviderAlias": "google",
      "identityProviderMapper": "google-user-attribute-mapper",
      "config": {
        "jsonField": "sub",
        "userAttribute": "googleId",
        "syncMode": "INHERIT"
      }
    },
    {
      "name": "google-email-mapper",
      "identityProviderAlias": "google",
      "identityProviderMapper": "google-user-attribute-mapper",
      "config": {
        "jsonField": "email",
        "userAttribute": "email",
        "syncMode": "INHERIT"
      }
    }
  ],
  "requiredActions": [
    {
      "alias": "VERIFY_EMAIL",
      "name": "Verify Email",
      "providerId": "VERIFY_EMAIL",
      "enabled": true,
      "defaultAction": true,
      "priority": 10,
      "config": {}
    },
    {
      "alias": "UPDATE_PROFILE",
      "name": "Update Profile", 
      "providerId": "UPDATE_PROFILE",
      "enabled": true,
      "defaultAction": true,
      "priority": 20,
      "config": {}
    },
    {
      "alias": "TERMS_AND_CONDITIONS",
      "name": "Terms and Conditions",
      "providerId": "TERMS_AND_CONDITIONS", 
      "enabled": true,
      "defaultAction": true,
      "priority": 30,
      "config": {}
    }
  ],
  "authenticationFlows": [
    {
      "alias": "ZMart Registration",
      "description": "ZMart registration flow with required social linking",
      "providerId": "basic-flow",
      "topLevel": true,
      "builtIn": false,
      "authenticationExecutions": [
        {
          "authenticator": "registration-page-form",
          "authenticatorFlow": false,
          "requirement": "REQUIRED",
          "priority": 10,
          "userSetupAllowed": false
        },
        {
          "flowAlias": "ZMart Registration Form", 
          "requirement": "REQUIRED",
          "priority": 20,
          "userSetupAllowed": false,
          "authenticatorFlow": true
        }
      ]
    },
    {
      "alias": "ZMart Registration Form",
      "description": "Registration form with automatic social linking setup",
      "providerId": "form-flow",
      "topLevel": false,
      "builtIn": false,
      "authenticationExecutions": [
        {
          "authenticator": "registration-user-creation",
          "authenticatorFlow": false,
          "requirement": "REQUIRED",
          "priority": 20,
          "userSetupAllowed": false
        },
        {
          "authenticator": "registration-profile-action",
          "authenticatorFlow": false,
          "requirement": "REQUIRED",
          "priority": 40,
          "userSetupAllowed": false
        },
        {
          "authenticator": "registration-password-action",
          "authenticatorFlow": false,
          "requirement": "REQUIRED",
          "priority": 50,
          "userSetupAllowed": false
        }
      ]
    },
    {
      "alias": "Social Registration Flow",
      "description": "Flow for users registering via social providers with cross-linking",
      "providerId": "basic-flow",
      "topLevel": true,
      "builtIn": false,
      "authenticationExecutions": [
        {
          "authenticator": "idp-review-profile",
          "authenticatorFlow": false,
          "requirement": "REQUIRED",
          "priority": 10,
          "userSetupAllowed": false
        },
        {
          "authenticator": "idp-create-user-if-unique",
          "authenticatorFlow": false,
          "requirement": "ALTERNATIVE",
          "priority": 20,
          "userSetupAllowed": false
        },
        {
          "flowAlias": "Handle Existing Account",
          "requirement": "ALTERNATIVE",
          "priority": 30,
          "userSetupAllowed": false,
          "authenticatorFlow": true
        }
      ]
    },
    {
      "alias": "Handle Existing Account",
      "description": "Handle existing account with same email/username",
      "providerId": "basic-flow",
      "topLevel": false,
      "builtIn": false,
      "authenticationExecutions": [
        {
          "authenticator": "idp-confirm-link",
          "authenticatorFlow": false,
          "requirement": "REQUIRED",
          "priority": 10,
          "userSetupAllowed": false
        },
        {
          "authenticator": "idp-email-verification",
          "authenticatorFlow": false,
          "requirement": "ALTERNATIVE",
          "priority": 20,
          "userSetupAllowed": false
        }
      ]
    }
  ],
