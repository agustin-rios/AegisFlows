{
  "realm": "zmart",
  "displayName": "ZMART",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 30,
  "defaultRoles": [
    "offline_access",
    "uma_authorization",
    "customer"
  ],
  "requiredCredentials": [
    "password"
  ],
  "attributes": {
    "frontendUrl": "http://localhost:3000",
    "userProfileEnabled": "true",
    "adminEventsEnabled": "true",
    "adminEventsDetailsEnabled": "true"
  },
  "identityProviders": [
    {
      "alias": "github",
      "displayName": "GitHub",
      "providerId": "github",
      "enabled": true,
      "updateProfileFirstLoginMode": "on",
      "trustEmail": true,
      "storeToken": true,
      "addReadTokenRoleOnCreate": false,
      "authenticateByDefault": false,
      "linkOnly": false,
      "firstBrokerLoginFlowAlias": "first broker login",
      "config": {
        "clientId": "will-be-updated-via-api",
        "clientSecret": "will-be-updated-via-api",
        "useJwksUrl": "true"
      }
    },
    {
      "alias": "google",
      "displayName": "Google",
      "providerId": "google",
      "enabled": true,
      "updateProfileFirstLoginMode": "on",
      "trustEmail": true,
      "storeToken": true,
      "addReadTokenRoleOnCreate": false,
      "authenticateByDefault": false,
      "linkOnly": false,
      "firstBrokerLoginFlowAlias": "first broker login",
      "config": {
        "clientId": "will-be-updated-via-api",
        "clientSecret": "will-be-updated-via-api",
        "useJwksUrl": "true"
      }
    }
  ],
  "identityProviderMappers": [
    {
      "name": "github-username-mapper",
      "identityProviderAlias": "github",
      "identityProviderMapper": "github-user-attribute-mapper",
      "config": {
        "jsonField": "login",
        "userAttribute": "githubUsername",
        "syncMode": "INHERIT"
      }
    },
    {
      "name": "github-email-mapper",
      "identityProviderAlias": "github",
      "identityProviderMapper": "github-user-attribute-mapper",
      "config": {
        "jsonField": "email",
        "userAttribute": "email",
        "syncMode": "INHERIT"
      }
    },
    {
      "name": "google-id-mapper",
      "identityProviderAlias": "google",
      "identityProviderMapper": "google-user-attribute-mapper",
      "config": {
        "jsonField": "sub",
        "userAttribute": "googleId",
        "syncMode": "INHERIT"
      }
    },
    {
      "name": "google-email-mapper",
      "identityProviderAlias": "google",
      "identityProviderMapper": "google-user-attribute-mapper",
      "config": {
        "jsonField": "email",
        "userAttribute": "email",
        "syncMode": "INHERIT"
      }
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "email": "admin@zmart.local",
      "attributes": {
        "customerType": ["premium"],
        "preferredLanguage": ["en"]
      },
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "admin"
      ]
    },
    {
      "username": "customer1",
      "enabled": true,
      "emailVerified": true,
      "firstName": "John",
      "lastName": "Doe",
      "email": "customer1@example.com",
      "attributes": {
        "customerType": ["regular"],
        "preferredLanguage": ["en"],
        "phoneNumber": ["+1-555-0123"],
        "githubUsername": ["johndoe"]
      },
      "credentials": [
        {
          "type": "password",
          "value": "customer123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "customer"
      ]
    }
  ],
  "clients": [
    {
      "clientId": "zmart-frontend",
      "name": "ZMart Frontend Application",
      "description": "Main frontend application for ZMart e-commerce platform",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "will-be-updated-via-api",
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:3000/auth/callback",
        "http://127.0.0.1:3000/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://127.0.0.1:3000"
      ],
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "publicClient": false,
      "frontchannelLogout": true,
      "protocol": "openid-connect",
      "attributes": {
        "saml.assertion.signature": "false",
        "saml.force.post.binding": "false",
        "saml.multivalued.roles": "false",
        "saml.encrypt": "false",
        "saml.server.signature": "false",
        "saml.server.signature.keyinfo.ext": "false",
        "exclude.session.state.from.auth.response": "false",
        "saml_force_name_id_format": "false",
        "saml.client.signature": "false",
        "tls.client.certificate.bound.access.tokens": "false",
        "saml.authnstatement": "false",
        "display.on.consent.screen": "false",
        "saml.onetimeuse.condition": "false"
      },
      "protocolMappers": [
        {
          "name": "github-username",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "user.attribute": "githubUsername",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "github_username",
            "jsonType.label": "String"
          }
        },
        {
          "name": "customer-type",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "user.attribute": "customerType",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "customer_type",
            "jsonType.label": "String"
          }
        },
        {
          "name": "phone-number",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "user.attribute": "phoneNumber",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "phone_number",
            "jsonType.label": "String"
          }
        }
      ]
    },
    {
      "clientId": "zmart-api",
      "name": "ZMart API Service",
      "description": "Backend API service for ZMart platform",
      "enabled": true,
      "bearerOnly": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "attributes": {
        "access.token.lifespan": "3600"
      }
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator role with full system access",
        "composite": false
      },
      {
        "name": "customer",
        "description": "Customer role for shopping and account management",
        "composite": false
      },
      {
        "name": "premium-customer",
        "description": "Premium customer with enhanced privileges",
        "composite": true,
        "composites": {
          "realm": ["customer"]
        }
      },
      {
        "name": "moderator",
        "description": "Content moderator role",
        "composite": false
      },
      {
        "name": "support",
        "description": "Customer support representative",
        "composite": false
      }
    ]
  }
}