  "clients": [
    {
      "clientId": "zmart-frontend",
      "name": "ZMart Frontend Application",
      "description": "Main frontend application for ZMart e-commerce platform",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "will-be-updated-via-api",
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:3000/auth/callback",
        "http://127.0.0.1:3000/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://127.0.0.1:3000"
